<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dictionary_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:gravity="end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/searchimage"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:baselineAlignBottom="false"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/a_dictionary_search" />

            <ImageView
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dictionary_top" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_account" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="계좌"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_loan" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="대출"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button2"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_card" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="카드"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button3"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_certification" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="인증"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button5"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_investment" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="계좌"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button6"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:layout_rowWeight="1"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="17dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="81dp"
                        android:src="@drawable/a_tax" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="세금"
                        android:textColor="@android:color/black" />

                    <ImageView
                        android:id="@+id/button7"
                        android:layout_width="217dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/dic_find" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>